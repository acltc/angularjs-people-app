<h1>Interesting People</h1>
<div ng-app="app">
  <div ng-controller="peopleCtrl" ng-init="fetchData()">
    <div id="order-buttons">
    <button ng-click="changeOrderAttribute('name')">Order by name</button>
    <button ng-click="changeOrderAttribute('details')">Order by details</button>
    </div>
    <label>Filter By Name:</label>

    <datalist id="names">
      <option>Bob</option>
    </datalist>

    <input ng-model="nameFilter" list="names">
    <div ng-repeat="person in people | filter: { name: nameFilter } | orderBy:orderAttribute:descending">
      <h3 ng-click="toggleVisible(person)">{{ person.name }}</h3>
      <p ng-if="person.detailsVisible">{{ person.details }}</p>
    </div>

    <div id="form">
      <div id="errors">
        <p ng-repeat="error in errors">{{ error }}</p>
      </div>
      Name: <input ng-model="newPersonName">
      Details: <input ng-model="newPersonDetails">
      <button ng-click="addPerson(newPersonName, newPersonDetails)">Add Person</button>
    </div>

  </div>
</div>
