<h1>Interesting People</h1>
<div ng-app="app">
  <div ng-controller="peopleCtrl">
    <div ng-repeat="person in people">
      <h3 ng-click="toggleVisible(person)">{{ person.name }} </h3>
      <span ng-click="deletePerson($index)">Delete</span>
      <p ng-if="person.detailsVisible">{{ person.details }}</p>
    </div>

    <div id="form">
      <h4>Add new person:</h4>
      Name: <input ng-model="newPersonName">
      Details: <input ng-model="newPersonDetails">
      <button ng-click="addNewPerson(newPersonName, newPersonDetails)">Add Person</button>
    </div>

    <div id="counter"><h4>Total number of people:</h4>{{ numberOfPeople() }}</div>
  </div>
</div>
